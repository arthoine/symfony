<!doctype html>
<html lang="fr">

<head >
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="{{asset("../image/favicon.ico")}}" type="image/x-icon">
    {% block stylesheets %}
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    {% endblock %}
    {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
    {% endblock %}
    {% block script %}{% endblock %}
    <title>{% block title %}Symfony Blog{% endblock %}</title>
    <style>
        html {

            position: relative;
            min-height: 100%;

            background: url('{{asset("../image/Fond.jpg")}}' );
            background-repeat: no-repeat;
            background-position: bottom;

            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover ;






        }


        body {
            /* Margin bottom by footer height */
            min-height: 100%;
            background: transparent;


        }
        .color{
            background-color: rgba(127, 0, 0, 0.73);
            border-radius: 10px;
            color : rgb(255, 255, 255);



        }
        .footer {
            position: absolute;
            bottom: 0;
            /*width: 100%;*/
            /* Set the fixed height of the footer here */
            height: auto;
            background-color: #f5f5f5;
            background-image: url('{{asset("../image/Logo.jpg")}}');
            background-size:  contain ;
            background-repeat: no-repeat;
            background-position: right ;


        }

    </style>

</head>

<body>
<nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark ">
    <a class="navbar-brand" href="{{ path('home') }}">Application de l'Entreprise</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mobileMenu" aria-controls="mobileMenu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="mobileMenu">
        <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
            {% if app.user %}
                <li class="nav-item">
                    <span class="nav-link">Bienvenue {{ app.user.userid }}!</span>
                </li>
            {% endif %}
            {% if is_granted('ROLE_USER') %}
                <li class="nav-item {{ app.request.get('_route') == 'homepage' ? 'active' : '' }}">
                    <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('essence') }}">Gestion Gazoil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('essenceGNR') }}">Gestion GNR</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('heure') }}">Gestion Heure</a>
                </li>

            {% endif %}

            {% if app.user %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item {{ app.request.get('_route') == 'app_register' ? 'active' : '' }}">
                        <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                    </li>

                    <li class="nav-item {{ app.request.get('_route') == ' menu' ? 'active' : '' }}">
                        <a class="nav-link" href="{{ path('menu') }}">admin menu</a>
                    </li>
                {% endif %}
            {% else %}

                <li class="nav-item {{ app.request.get('_route') == 'app_login' ? 'active' : '' }}">
                    <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                </li>

            {% endif %}
        </ul>
    </div>
</nav>

{% block content %}
{% endblock %}





{% block scripts %}
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
{% endblock %}

<footer class="footer container-fluid">

        <div class="row">
            <div class="col-sm-12 d-sm-none">
                © Copyright 2021


            </div>
            <div class="col-sm-12 d-none d-sm-block">

                © Copyright 2021 Tous droits réservés. <br>
                Site édité par Poeuf Antoine.
            </div>
        </div>

</footer>
</body>


</html>